<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
  </startup>
  
  <appSettings>

    <add key="Game.Tetris.Visualize" value="true" />
    <add key="Game.Tetris.Initialize" value="true" />
    <add key="Game.Tetris.StartLevel" value="0" />
    <add key="Game.Tetris.StartFromGameOver" value="false" />

    <!-- if the piece is not unambiguous, we take several samples and 
         calculate the most probable result (this  -->
    <add key="Game.Tetris.Extractor.Samples" value="1" />
    <add key="Game.Tetris.Check.Samples" value="1" />
    <add key="Game.Tetris.Check.Enabled" value="false" />

    <add key="Game.Tetris.Extractor.ThresholdNextPiece" value="0.4" />
    <add key="Game.Tetris.Extractor.ThresholdCurrentPiece" value="0.4" />
    <add key="Game.Tetris.Extractor.ThresholdMovedPiece" value="0.5" />

    <!-- the probability that must be reached, to directly accept a matched piece (without sampling) -->
    <add key="Game.Tetris.Extractor.UpperThreshold" value="0.95" />
    <!-- the probability that must be reached, to not reject a matched piece (when higher, do sampling) -->
    <add key="Game.Tetris.Extractor.LowerThreshold" value="0.80" />

    <!-- TODO: old value, remove later -->
    <!-- where is the threshold of the mean value of a tile, that it is interpreted as a block
         optimum is between 185 and 195 -->
    <add key="Game.Tetris.Extractor.MeanThreshold" value="150" />

    <!-- this probability must be reached to accept a piece
         if not, the piece is rejected and the search continues
         0 errors:  1
         1 error:   0.9375
         2 errors:	0.875
         3 errors:	0.8125
         4 errors:	0.75
         -->
    <!-- TODO: old value, remove later -->
    <add key="Game.Tetris.Extractor.MinimalProbability" value="0.9375" />

    <add key="Emulator.Rom.Path" value="Roms/tetris.gb" />

    <!-- Possible values ar 'Emulated', 'Physical' -->
    <add key="Robot.Engine.Mode" value="Physical" />

    <!-- 0 for integrated camera, 1 for additional camera -->
    <add key="Robot.Camera.Index" value="1" />
    <add key="Robot.Camera.RotateImage" value="true" />

    <add key="Robot.Quantizer.Transformation.KeyPoints" value="474,347,153,347,457,93,174,95" />
    <add key="Robot.Quantizer.Threshold.Constant" value="13" />
    <add key="Robot.Quantizer.Threshold.BlockSize" value="17" />
    <add key="Robot.Quantizer.Threshold.MaxValue" value="255" />
    <add key="Robot.Quantizer.Threshold.AdaptiveThresholdType" value="MeanC" />
    <add key="Robot.Quantizer.Threshold.ThresholdType" value="Binary" />

    <add key="Robot.Actuator.Host" value="localhost" />
    <add key="Robot.Actuator.Port" value="4223" />
    <add key="Robot.Actuator.UidMaster" value="6JKbWn" />
    <add key="Robot.Actuator.UidRelay1" value="mTA" />
    <add key="Robot.Actuator.UidRelay2" value="mTC" />
    <add key="Robot.Actuator.UidTemp" value="qBx" />

  </appSettings>
  
</configuration>